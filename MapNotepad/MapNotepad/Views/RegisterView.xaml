<?xml version="1.0" encoding="utf-8" ?>
<view:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      x:Class="MapNotepad.Views.RegisterView"
                      xmlns:view="clr-namespace:MapNotepad.Views" 
                      xmlns:controls="clr-namespace:MapNotepad.Controls">
    <view:BaseContentPage.Content>
        <StackLayout>
            <controls:CustomToolBar Title="Create an accounter"
                                    FontFamily="Consolas"
                                    SourceLeftImage="LeftArrow.png"
                                    SourceRigthImage="LeftArrow.png"
                                    LeftButtonCommand="{Binding GoToBack}"
                                    RigthButtonCommand="{Binding GoToBack}" />

            <Label Text="Welcome to Xamarin.Forms!"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </view:BaseContentPage.Content>
</view:BaseContentPage>